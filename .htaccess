# i-shoping/.htaccess
RewriteEngine On

# Rediriger toutes les requêtes vers index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]

# Sécurité : empêcher l'accès direct aux fichiers sensibles
<Files ~ "\.(env|log|sql)$">
    Deny from all
</Files>